{
  "name": "agent-workshop",
  "displayName": "AI Agent Workshop",
  "description": "AI-powered code assistant using OpenAI API",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.97.0"
  },
  "activationEvents": [
    "onCommand:agent-workshop.openAIPanel",
    "onCommand:agent-workshop.askQuestion",
    "onView:agent-workshop-view"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "agent-workshop.openAIPanel",
        "title": "Open AI Assistant Panel",
        "icon": "$(lightbulb)"
      },
      {
        "command": "agent-workshop.askQuestion",
        "title": "Ask AI Assistant a Question"
      },
      {
        "command": "agent-workshop.openAIAssistant",
        "title": "Open AI Assistant"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-assistant",
          "title": "AI Assistant",
          "icon": "$(lightbulb)"
        }
      ]
    },
    "views": {
      "ai-assistant": [
        {
          "id": "agent-workshop-view",
          "name": "AI Assistant",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "AI Assistant",
      "properties": {
        "agent-workshop.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "API key for OpenAI"
        },
        "agent-workshop.openaiModel": {
          "type": "string",
          "default": "gpt-o3-mini",
          "description": "OpenAI model to use (e.g., gpt-o3-mini, gpt-3.5-turbo, gpt-4)"
        }
      }
    }
  },
  "scripts": {
    "copy-webview": "node scripts/copy-webview.js",
    "compile": "tsc -p ./ && npm run copy-webview",
    "watch": "tsc -watch -p ./ & npm run copy-webview",
    "clean": "node scripts/clean.js"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "node-fetch": "^3.3.0"
  },
  "private": true
}
